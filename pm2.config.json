{
  "apps": [
    {
      "name": "isr-nextjs-app",
      "script": "npm",
      "args": "start",
      "instances": 2,
      "exec_mode": "cluster",
      "max_memory_restart": "500M",
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "watch": false,
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "NEXT_PUBLIC_APP_URL": "http://localhost:3000",
        "REDIS_URL": "redis://localhost:6379",
        "CACHE_LOG_LEVEL": "info"
      }
    }
  ]
}

